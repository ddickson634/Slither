<!DOCTYPE html>
<html>
  <head>
    <title>Slither</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

  </head>

  <body>

    <nav>
      <div class="nav-wrapper light-green">

        <a href="/" class="waves-effect waves-light btn teal-text">HOME</a>
        <ul id="nav-mobile" class="right">

          <% if user_signed_in? %>
            <li>
              <a href="/scores" class="waves-effect waves-light btn black-text">All Scores</a>
            </li>
            <li><%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "waves-effect waves-light btn teal-text" %></li>
          <% end %>

          <% if !user_signed_in? %>
            <li>
              <a href="/users/sign_in" class="waves-effect waves-light btn purple-text pulse">LOG IN</a>
            </li>
          <% end %>

        </ul>
      </div>
    </nav>

    <% if user_signed_in? %>

      <h4 id="userEmail">
        <%= current_user.email %></h4>

    <% end %>

    <div class="container">
      <%= yield %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </body>
</html>
